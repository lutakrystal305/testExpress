extends ../layouts/common
block content

	h1 List items

	.row
		each product in products
			.col-sm-6.col-md-4.col-lg-3
				.card.mb-3
					img.card-img-top(src=product.image)
					.card-body
						h5.card-title=product.name
						p.card-text=product.description
						a.btn.btn-primary(href='#') Buy now

