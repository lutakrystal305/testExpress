extends ../layouts/common
block content

	h1 Create a new user

	if errors 
		each error in errors
			.alert.alert-danger= error

	form(action="/users/create", method= "POST")
		.form-group
			label(for="name") Name:
			input#name.form-control(name="name", type="text", value= values ? values.name : '')
		.form-group
			label(for="date") Date of Birth:
			input#date.form-control(name="date", type="text", value= values ? values.phone : '')


		button.btn.btn-primary Create